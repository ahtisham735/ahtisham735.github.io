
<html>
<head>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <title>Login</title>
  
</head>
<body class="Login">
    <div>
        <img src="~/Background_Images/pic4.jpg" />
    </div>

        <form class="formStyle" method="post" enctype="multipart/form-data" action="/Home/HomeView">
            <h3>Login</h3><br />
            <div class="form-group">
                <input autocomplete="off" name="usr" id="usr" type="text" placeholder="Username">
                <p style="color:red;">@ViewBag.usrError</p>
            </div>
            <div class="form-group">
                <input type="password" name="passwd" id="passwd" placeholder="Password">
                <p style="color:red;">@ViewBag.passwdError</p>
                <p style="color:red;">@ViewBag.ErrorMessage</p>

            </div>
            <input type="submit" value="Login">
            <label>No Account?<a asp-action="SignUp">SignUp</a></label>
        </form>
    
</body>
</html>